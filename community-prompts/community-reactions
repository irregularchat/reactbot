templates:
    robert_joined:
        type: m.room.message
        variables:
            event_id: '{{event.event_id}}'
        content:
            msgtype: m.text
            body: '*Robert has joined the chat*'
            m.relates_to:
                m.in_reply_to:
                    event_id: $${event_id}
